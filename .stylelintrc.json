{
	"extends": [
		"stylelint-config-standard",
		"stylelint-config-html",
		"stylelint-config-recommended-vue",
		"stylelint-config-prettier"
	],
	"rules": {
		"at-rule-no-unknown": [
			true,
			{
				"ignoreAtRules": [
					"tailwind",
					"apply",
					"variants",
					"responsive",
					"screen",
					"layer"
				]
			}
		],
		"declaration-block-trailing-semicolon": null,
		"no-descending-specificity": null,
		"length-zero-no-unit": null
	}
}
